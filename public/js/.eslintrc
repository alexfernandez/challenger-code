---
env:
  node: true
  browser: true
  es6: true
extends: eslint:recommended
parserOptions:
  sourceType: module
  ecmaVersion: 2018
globals:
  CodeMirror: readonly
rules:
  no-inner-declarations: 0
  no-unused-vars:
  - error
  - args: after-used
  no-console: 0
  no-constant-condition: 0
  indent:
  - error
  - tab
  max-len:
  - off
  - tabWidth: 4
  linebreak-style:
  - error
  - unix

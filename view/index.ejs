<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('head.ejs') %>
		<title>challengerco.de</title>
	</head>
	<body>
		<%- include('topbar.ejs') %>
		<div class="wrapper">
		<h1>Challenges</h1>
		<p>
			Go through them in order of difficulty or by category.
		</p>
		<% for (const challenge of challenges) { %>
			<h2><%= challenge.name %></h2>
			<p>
				<a href="/challenge/<%= challenge.id %>/view">View</a> or
				<a href="/challenge/<%= challenge.id %>/run">run</a> the challenge.
			</p>
		<% } %>
		<h2>Acknowledgements</h2>
		<p>
			See <a href="https://github.com/alexfernandez/challenger-code/graphs/contributors">contributors</a>.
		</p>
		</div>
		<%- include('bottombar.ejs') %>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('head.ejs') %>
		<title><%= challenge.id %> - challengerco.de</title>
		<%- include('codemirror.ejs') %>
		<script src="/js/run-challenge.js"></script>
	</head>
	<body>
		<%- include('topbar.ejs') %>
		<div class="wrapper columns">
			<div class="read">
				<h1>
					<span id="challenge-id"><%= challenge.id %></span>:
					<%= challenge.name %></h1>
				<h2>The Challenge</h2>
				<p>
				<%= challenge.description %>
				</p>
				<h2>Verifications</h2>
				<div id="verifications">
				<% for (const [i, verification] of challenge.verifications.entries()) { %>
				<p class="verification" id="verification<%= i %>">
				<%= verification.name %> (<%= verification.public ? 'public' : 'private' %>)
				<span id="success<%= i %>"></span>
				<br/>
				<tt>[<%= verification.input %>] â‡’ <%= verification.output %></tt>
				</p>
				<% } %>
				</div>
			</div>
			<div class="solve">
				<h2>Your Solution</h2>
				<textarea class="solution" id="solution">
/**
 * Write a function solve() with your answer to the challenge.
 */
function solve(array) {
	// write your code here
}
</textarea>
				<button id="send">Send</button>
				<div id="result">
					<h2>Result:
						<span id="success">???</span>
					</h2>
					<p>
					Verification time:
					<span id="time"></span>
					</p>
					<p>
					Code size:
					<span id="nodes"></span>
					</p>
					<pre id="error" class="invisible"></pre>
				</div>
			</div>
		</div>
		<%- include('bottombar.ejs') %>
	</body>
</html>

